## Base16 {{scheme-name}}
# Author: {{scheme-author}}

# ===============================
# Super Minimal Bar (Base16)
# ===============================

[theme]
theme = "plain"

[theme.overrides]
idle_bg = "#{{base00-hex}}"
idle_fg = "#{{base05-hex}}"
separator_fg = "#{{base03-hex}}"
separator_bg = "#{{base00-hex}}"
separator = " • "
[icons]
icons = "material-nf"

# ===============================
# WIFI
# yellow
# ===============================
[[block]]
block = "net"
interval = 3
format = "$icon $ssid"
[block.theme_overrides]
idle_fg = "#{{base0A-hex}}"

# ===============================
# VOLUME
# red
# ===============================
[[block]]
block = "sound"
driver = "pulseaudio"
format = "$icon $volume"
[block.theme_overrides]
idle_fg = "#{{base08-hex}}"

# ===============================
# BATTERY
# green
# ===============================
[[block]]
block = "battery"
interval = 15
format = "$icon $percentage"
full_format = "$icon $percentage"
empty_format = "$icon $percentage"
not_charging_format = "$icon $percentage"
missing_format = "$icon $percentage"
[block.theme_overrides]
idle_bg     = "#{{base00-hex}}"
idle_fg     = "#{{base0B-hex}}"
good_bg     = "#{{base00-hex}}"
good_fg     = "#{{base0B-hex}}"
warning_bg  = "#{{base00-hex}}"
warning_fg  = "#{{base0B-hex}}"
critical_bg = "#{{base00-hex}}"
critical_fg = "#{{base0B-hex}}"

# ===============================
# CALENDAR
# blue
# ===============================
[[block]]
block = "time"
interval = 60
format = "󰃭 $timestamp.datetime(f:'%a %b %d')"
[block.theme_overrides]
idle_fg = "#{{base0D-hex}}"

# ===============================
# TIME
# magenta
# ===============================
[[block]]
block = "time"
interval = 5
format = "󰥔 $timestamp.datetime(f:'%I:%M %p') "
[block.theme_overrides]
idle_fg = "#{{base0E-hex}}"
